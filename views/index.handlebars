<div class="container">
    <div class="row">
        <div class="col text-center">
            <h2 style="color: #FF914C">Adoptable Cats</h2>
            <ul class="list-group list-group-flush">
                {{#each cats}}
                {{#unless adoptable}}
                {{> cats/cat-block adopt=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col text-center">
            <h2 style="color: #FF914C">Yay! Adopted!</h2>
            <ul class="list-group list-group-flush">
                {{#each cats}}
                {{#if adoptable}}
                {{> cats/cat-block adopt=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col border-0">
            <div class="card border-0" style="width: 18rem;">
                <div class="card-body rounded" style="background-color: #FF914C">
                    <h4 class="card-title">Add a Cat!</h4>
                    <form class="create-form">
                        <div class="form-group">
                            <label for="catName">Cat Name:</label>
                            <input type="text" id="catName" name="name">
                        </div>
                        <div class="form-group">
                            <label for="adoptable">Have they been adopted?</label><br>
                            <input class="m-2" type="radio" name="adoptable" value="1" checked>Adoptable<br>
                            <input class="m-2" type="radio" name="adoptable" value="0">Adopted!
                        </div>
                        <button type="submit" class="btn btn-dark">Add Cat</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>